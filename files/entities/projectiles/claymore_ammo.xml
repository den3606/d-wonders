<Entity name="$projectile_default">
  <Base file="data/entities/base_projectile.xml" >
    <VelocityComponent
			mass="2"
      gravity_y="400"
			air_friction="0.5"
			>
    </VelocityComponent>
  </Base>
  <HomingComponent
		detect_distance="25"
		homing_targeting_coeff="140.0"
		homing_velocity_multiplier="1"
		>
	</HomingComponent>
  <ProjectileComponent
    _enabled="1"
  	lob_min="1"
  	lob_max="1"
  	speed_min="900"
  	speed_max="900"
  	friction="0.5"
    on_death_explode="0"
    on_death_gfx_leave_sprite="0"
    on_lifetime_out_explode="0"
    explosion_dont_damage_shooter="1"
    on_collision_die="1"
    ragdoll_force_multiplier="0.0025"
    lifetime="30"
    knockback_force="0.1"
  	velocity_sets_scale="1"
  	camera_shake_when_shot="2.0"
  	shoot_light_flash_radius="64"
  	hit_particle_force_multiplier="0.1"
    create_shell_casing="1"
    shell_casing_offset.x="-10"
    shell_casing_offset.y="-4"
    bounces_left="1"
  	damage="0.2"
    muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_medium.xml"
    knockback_force="0.4"
	>
    <config_explosion
      never_cache="1"
      damage="0"
      >
    </config_explosion>
  </ProjectileComponent>
  <ParticleEmitterComponent
		emitted_material_name="spark_white"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-1"
		x_pos_offset_max="1"
		y_pos_offset_min="-1"
		y_pos_offset_max="1"
		gravity.y="0"
		x_vel_min="-2"
		x_vel_max="2"
		y_vel_min="-2"
		y_vel_max="2"
		count_min="1"
		count_max="3"
		is_trail="1"
		trail_gap="1"
		fade_based_on_lifetime="1"
		lifetime_min="0.8"
		lifetime_max="2.0"
		airflow_force="0.6"
		airflow_time="0.401"
		airflow_scale="0.05"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		render_on_grid="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="2"
		is_emitting="1" >
	</ParticleEmitterComponent>
  <SpriteComponent
    _enabled="1"
    alpha="1"
    image_file="mods/d-wonders/files/projectiles_gfx/claymore_ammo.xml"
    next_rect_animation=""
    rect_animation=""
     >
  </SpriteComponent>
  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/minigun">
  </AudioComponent>
  <VariableStorageComponent
		name="projectile_file"
		value_string="mods/d-wonders/files/entities/projectiles/claymore_ammo.xml"
		>
	</VariableStorageComponent>
</Entity>