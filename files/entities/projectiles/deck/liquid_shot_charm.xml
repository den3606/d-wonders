<Entity tags="projectile_player" name="$projectile_default">
  <Base file="data/entities/base_projectile.xml" >
    <VelocityComponent
    		gravity_y="400"
    		air_friction="0.2"
			  mass="0.4"
			>
    	</VelocityComponent>
  </Base>
  <ProjectileComponent
		_enabled="1"
		speed_min="200"
		speed_max="300"
		on_death_explode="0"
		on_death_gfx_leave_sprite="0"
		on_lifetime_out_explode="0"
		on_collision_die="1"
		damage="0"
    velocity_sets_scale="1"
    velocity_sets_rotation="1"
		lifetime="120"
    lifetime_randomness="10"
		shoot_light_flash_r="0"
		shoot_light_flash_g="0"
		shoot_light_flash_b="0"
		shoot_light_flash_radius="10"
		knockback_force="1.5"
		physics_impulse_coeff="200"
		>
    <config_explosion
      never_cache="1"
			damage="0" >
		</config_explosion>
  </ProjectileComponent>
  <SpriteComponent
		_enabled="1"
		alpha="1"
		image_file="mods/d-wonders/files/projectiles_gfx/liquid_shot_charm.xml"
		next_rect_animation=""
		offset_x="8"
		offset_y="6"
		rect_animation=""
		 >
	</SpriteComponent>
  <ParticleEmitterComponent
		emitted_material_name="magic_liquid_charm"
		count_min="1"
		count_max="2"
		offset.x="2"
		offset.y="2"
		x_pos_offset_min="-3"
		y_pos_offset_min="-3"
		x_pos_offset_max="-1"
		y_pos_offset_max="1"
		count_min="1"
		count_max="1"
		is_trail="1"
		trail_gap="0.5"
		lifetime_min="0.1"
		lifetime_max="1.3"
		render_on_grid="1"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		is_emitting="1" >
	</ParticleEmitterComponent>
  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/bullet_slime">
  </AudioComponent>
  <VariableStorageComponent
		name="projectile_file"
		value_string="mods/d-wonders/files/entities/projectiles/deck/liquid_shot_charm.xml"
		>
	</VariableStorageComponent>
</Entity>