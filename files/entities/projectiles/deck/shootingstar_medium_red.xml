  <LightComponent _enabled="1"
                    r="255"
                    g="0"
                    b="0"
                    radius="40">
  </LightComponent>
  <VariableStorageComponent
		name="projectile_file"
		value_string="mods/d-wonders/files/entities/projectiles/deck/shootingstar_medium_red.xml"
		>
	</VariableStorageComponent>
